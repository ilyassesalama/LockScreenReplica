{
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 90,
    "tabWidth": 4,
    "useTabs": false,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "tabWidth": 4,
                "useTabs": true
            }
        },
        {
            "files": "*.html",
            "options": {
                "printWidth": 180,
                "useTabs": true
            }
        }
    ]
}
